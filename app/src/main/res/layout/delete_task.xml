<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/bold"
        android:text="AgendArc"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="26dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewDescription3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle3"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/medium"
        android:text="Make Your Schedule be Better"
        android:textColor="@color/blue"
        app:cardCornerRadius="8dp"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="68dp"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:layout_width="600px"
        android:layout_height="450px"
        android:layout_gravity="fill"
        app:cardBackgroundColor="#ABC4D6"
        app:cardCornerRadius="20px"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="137dp"
        tools:visibility="visible"
        tools:ignore="MissingConstraints" >

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#58C15C"
            android:drawableTint="#FFEB3B"
            android:foregroundTint="#FFEB3B"
            android:text="Tidak"
            android:translationX="25px"
            android:translationY="300px" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F84B3E"
            android:drawableTint="#FFEB3B"
            android:foregroundTint="#FFEB3B"
            android:text="Ya"
            android:translationX="340px"
            android:translationY="300px" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus Task 1 ???"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp"
            android:translationX="90px"
            android:translationY="20px" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet consectetur."
            android:translationX="30px"
            android:translationY="150px" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>