<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/bold"
        android:text="AgendArc"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/textViewDescription4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle3"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/medium"
        android:text="Make Your Schedule be Better"
        android:textColor="@color/blue"
        app:cardCornerRadius="8dp"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="68dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="600px"
        android:layout_height="800px"
        android:layout_gravity="fill"
        app:cardBackgroundColor="#ABC4D6"
        app:cardCornerRadius="20px"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="124dp"
        tools:visibility="visible">

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Edit Title"
            android:translationX="20px" />

        <CheckedTextView
            android:id="@+id/checkedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Your Task"
            android:translationX="27px"
            android:translationY="120px" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:translationX="20px"
            android:translationY="500px" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Your Deadline"
            android:translationX="245px"
            android:translationY="540px" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="20px"
            android:translationY="510px"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:drawableTint="#FFEB3B"
            android:foregroundTint="#FFEB3B"
            android:text="Selesai"
            android:translationX="25px"
            android:translationY="650px" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFEB3B"
            android:drawableTint="#FFEB3B"
            android:foregroundTint="#FFEB3B"
            android:text="Batal"
            android:translationX="340px"
            android:translationY="650px" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>